header
  position relative
  min-height 600px
  height 100vh
  
  display flex
  flex-direction column
  justify-content space-between
  
  align-items center
  
  background url('../img/general/header_bg.jpg') center no-repeat
  background-size cover
  
  color #fff
  line-height 1


.header-overlay
  position absolute
  left 0
  top 0 
  opacity .8
  // z-index 0
  
  width 100%
  height 100%
  background-image linear-gradient( 150deg, rgb(136,211,206) 0%, rgb(110,69,226) 100%)
  background-image -webkit-linear-gradient( 150deg, rgb(136,211,206) 0%, rgb(110,69,226) 100%)
  
// ---------------------------------header-top
.header-top
  width 97%
  position relative
  // z-index 1
  
  display flex
  flex-wrap wrap
  justify-content center
  align-items center
  min-height 150px
  
.logo 
  // flex-grow 1 
  // outline 2px solid red
  margin rem(30) 0 rem(30)
  display flex 
  align-items center
  
  cursor pointer
  
  &__img
    width 50px
    height 50px
    
  &__text
    margin 0 0.5em
    font-size rem(30)
    text-transform uppercase
    letter-spacing 0.2em
    font-weight 700

.nav
  flex-grow 1
  // margin 0 auto
  display flex
  flex-wrap wrap 
  // flex-direction row
  
  justify-content center
  // min-width 770px
  align-items center
  
  &__list
    list()
    margin rem(20) 0 rem(20)
    display flex
    flex-wrap wrap
    justify-content center
    padding-right (30/16)em
    font-weight 500

  &__link
    display block
    position relative
    padding (18/16)em (30/16)em
    
    font-size rem(16)
    color #fff
    text-decoration none
    color white
    
    white-space nowrap
    &:after
      display block
      position absolute
      content ''
      bottom 0
      left 0
      width 0
      height 2px
      background-color transparent
      transition background-color .5s, width .5s
    
    &:hover:after
      display block
      position absolute
      content ''
      bottom 0
      left 0
      width 100%
      height 2px
      background-color #fff

.btn 
  margin rem(20) 0 rem(20) 
  padding (19/12)em (32/12)em
  
  font-size rem(12)
  letter-spacing 0.05em
  text-transform uppercase
  font-weight 700
  white-space nowrap
  text-decoration none
  
  border 1px solid #fff
  border-radius (50/12)em
    
  cursor pointer
  &:hover
    background-color #fff
    color #c2c9db

.mobile-nav-icon
  display none
  position relative
  // z-index 4
  width 20px
  height 20px
  transform: rotate(0deg)
  transition .5s ease-in-out
  cursor pointer
  span
    display block
    position absolute
    content ''
    height 4px
    width 100%
    background-color #fff
    border-radius 4px
    opacity 1
    left 0
    transition: .25s ease-in-out;
    &:nth-child(1)
      top 0px
    &:nth-child(2)
      top 10px
    &:nth-child(3)
      top 20px
