// ----------------------------header-middle
.header-middle
  position relative
  z-index 1
  
  text-align center
  &__caption
    display inline-flex
    
    font-size rem(14)
    letter-spacing 0.05em
    text-transform uppercase
    font-weight 700
    
    &:before,
    &:after
      display inline-flex
      margin auto (15/14)em

      content ''
      height 1px
      width (24/14)em
      background-color #fff
        
  &__heading
    margin (26/86)em 0 

    font-size rem(86)
    letter-spacing -0.04em

    font-weight 500
    line-height 1

  &__description
    margin 0 auto
    max-width rem(390)    
    font-size rem(16)
    line-height rem(28)
    font-weight 400 

// ----------------------------header-middle 
.arrow-down
  margin-bottom rem(50)
  
  display flex
  width 64px
  height 64px
  z-index 1
  
  background-color #fff
  border-radius 50% 
  
  cursor pointer
  &:hover
    box-shadow 0px 0px 18.69px 2.31px rgba(204, 204, 223, 0.5)
  &__ico
    margin auto
    width 16px
    height 16px
      img
        height auto
        width 100%
  